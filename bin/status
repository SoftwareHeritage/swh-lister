# intended usage: watch -n 60 bin/status

DBNAME="github"

echo "SELECT COUNT(*), MAX(id) FROM repos" | psql "$DBNAME"
echo "\\l+ ${DBNAME}" | psql "$DBNAME"
du -sh cache/
zgrep -i --color=auto "'X-RateLimit-Remaining'" cache/$(ls -t cache/ | head -n 4 | tail -n 1)
